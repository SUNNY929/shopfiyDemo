{{ 'gunchung-product-imgText.css' | asset_url | stylesheet_tag }}


<div class="gunchung-imgText-box-topbox" style="
                              --gunchung-imgText-box-topbox-H:{{ section.settings.GPI-topbox-H }}px;
                              "></div>
<div class="{{ section.settings.GPI_type }}" style="--gunchung-imgText-box-JC:{{ section.settings.GPI-box-JC }}">
  <div class="gunchung-imgText-box" style="--gunchung-imgText-box-H:{{ section.settings.GPI-box-H }}px">
    {%- for block in section.blocks -%}
      <div class="gunchung-imgText-block" style="--gunchung-imgText-box-MT:{{ section.settings.GPI-box-MT }}px">
        <div class="gunchung-imgText-img" style="
                                                        --gunchung-imgText-box-img-W:{{ section.settings.GPI-img-W }}px;
                                                        --gunchung-imgText-box-img-H:{{ section.settings.GPI-img-H }}px;
                                                        ">
          <img src="{{block.settings.A_pic | image_url: width: 500}}" alt="">
        </div>
        <div class="gunchung-imgText-txt" style="
                                                        --gunchung-imgText-box-txt-ML:{{ section.settings.GPI-txt-ML }}px;
                                                        --gunchung-imgText-box-txt-TA:{{ section.settings.GPI-txt-TA }};
                                                        --gunchung-imgText-box-txt-FS:{{ section.settings.GPI-txt-FS }}px;
                                                        --gunchung-imgText-box-txt-FW:{{ section.settings.GPI-txt-FW }};
                                                        --gunchung-imgText-box-txt-col:{{ section.settings.GPI-txt-col }};
                                                        ">
          <p>{{ block.settings.text }}</p>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>
<div class="gunchung-imgText-box-botbox" style="
              --gunchung-imgText-box-botbox-H:{{ section.settings.GPI-botbox-H }}px;
              "></div>

{% schema %}
  {
    "name": "光程图文列表",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "容器设置"
      },
      {
        "type": "select",
        "id": "GPI_type",
        "label": "展示形式",
        "options": [
          {
            "label": "九宫格",
            "value": "gunchung-imgText-type-1"
          }, {
            "label": "列表",
            "value": "gunchung-imgText-type-2"
          }
        ],
        "default": "gunchung-imgText-type-1"
      },
      {
        "type": "select",
        "id": "GPI-box-JC",
        "label": "九宫格形式子元素对齐形式",
        "options": [
          {
            "label": "居中对齐",
            "value": "space-around"
          }, {
            "label": "左右对齐",
            "value": "space-between"
          }, {
            "label": "右对齐",
            "value": "end"
          }, {
            "label": "左对齐",
            "value": "left"
          }
        ],
        "default": "space-around"
      },
      {
        "type": "select",
        "id": "GPI-txt-TA",
        "label": "九宫格形式文字对齐形式",
        "options": [
          {
            "label": "左对齐",
            "value": "left"
          }, {
            "label": "右对齐",
            "value": "right"
          }, {
            "label": "居中",
            "value": "center"
          }, {
            "label": "长文本左右对齐",
            "value": "justify"
          }
        ],
        "default": "center"
      }, {
        "type": "range",
        "label": "九宫格形式子元素距离上下间距",
        "id": "GPI-box-MT",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "default": 30
      }, {
        "type": "range",
        "label": "列表形式子元素高度",
        "id": "GPI-box-H",
        "min": 60,
        "max": 230,
        "step": 2,
        "unit": "px",
        "default": 80
      }, {
        "type": "header",
        "content": "图片设置"
      }, {
        "type": "range",
        "label": "图片宽",
        "id": "GPI-img-W",
        "min": 30,
        "max": 230,
        "step": 2,
        "unit": "px",
        "default": 60
      }, {
        "type": "range",
        "label": "图片高",
        "id": "GPI-img-H",
        "min": 30,
        "max": 230,
        "step": 2,
        "unit": "px",
        "default": 60
      }, {
        "type": "header",
        "content": "文字设置"
      }, {
        "type": "range",
        "label": "字体大小",
        "id": "GPI-txt-FS",
        "min": 20,
        "max": 70,
        "step": 1,
        "unit": "px",
        "default": 22
      }, {
        "type": "range",
        "label": "字体粗细",
        "id": "GPI-txt-FW",
        "min": 100,
        "max": 700,
        "step": 50,
        "default": 400
      }, {
        "type": "color",
        "label": "字体颜色",
        "id": "GPI-txt-col",
        "default": "#000000"
      }, {
        "type": "range",
        "label": "列表形式文字距左边距离",
        "id": "GPI-txt-ML",
        "min": 0,
        "max": 200,
        "step": 2,
        "default": 40
      }, {
        "type": "header",
        "content": "上下边距设置"
      }, {
        "type": "range",
        "label": "上边距",
        "id": "GPI-topbox-H",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 30
      }, {
        "type": "range",
        "label": "下边距",
        "id": "GPI-botbox-H",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 30
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "子元素",
        "settings": [
          {
            "type": "header",
            "content": "子元素设置"
          }, {
            "type": "image_picker",
            "id": "A_pic",
            "label": "效果图（原图与效果图请采用同一比例）"
          }, {
            "type": "text",
            "id": "text",
            "label": "文本",
            "default": "Welcome to our website!"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "光程图文列表"
      }
    ],
    "locales": {
      "en": {
        "title": "Slideshow"
      },
      "fr": {
        "title": "Diaporama"
      }
    },
    "enabled_on": {
      "templates": ["*"],
      "groups": ["*"]
    }
  }
{% endschema %}